{
    "name": "solutions",
    "version": "0.0.1",
    "description": "Technical assessment for the position of backend engineer at Proftsale",
    "repository": "https://github.com/guligon90/BackEndChallenge.git",
    "author": {
        "name": "Guilherme Gon√ßalves <guligon90>"
    },
    "license": "ISC",
    "main": "build/index.js",
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "build:validate": "tsc --project tsconfig.json --noEmit",
        "format": "prettier --write --config .prettierrc.cjs '**/*.{cjs,js,ts,jsx,tsx,json,css,scss,md}'",
        "lint": "eslint \"{config,src,test}/**/*.{js,ts}\"",
        "lint:fix": "eslint \"{config,src,test}/**/*.{js,ts}\" --fix",
        "prebuild": "rm -rf build",
        "start:dev": "ts-node-dev ./src/index.ts",
        "start:prod": "node ./build/index.js",
        "test": "ts-node test",
        "test:watch": "ts-node test --watch",
        "test:watchall": "ts-node test --watchAll",
        "test:cov": "ts-node test --coverage",
        "test:ci": "ts-node test --coverage",
        "test:debug": "node --inspect-brk -r ts-node/register",
        "validate": "yarn build:validate && yarn format && yarn lint:fix && yarn test",
        "update:apply": "ncu -u && yarn install",
        "update:check": "ncu"
    },
    "keywords": [
        "backend",
        "challenge",
        "nodejs",
        "typescript",
        "proftsale"
    ],
    "dependencies": {
        "@sinclair/typebox": "^0.32.13",
        "@types/config": "^3.3.3",
        "@types/module-alias": "^2.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "async": "^3.2.5",
        "body-parser": "^1.20.2",
        "config": "^3.3.11",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-async-errors": "^3.1.1",
        "express-openapi-validator": "^5.1.3",
        "express-validator": "^7.0.1",
        "hashids": "^2.3.0",
        "http-terminator": "^3.2.0",
        "microdiff": "^1.3.2",
        "module-alias": "^2.2.3",
        "node-cache": "^5.1.2",
        "openid-client": "^5.6.4",
        "swagger-ui-express": "^5.0.0",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "winston": "^3.11.0"
    },
    "devDependencies": {
        "@types/async": "^3.2.24",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.11.16",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.6.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-prettier": "5.1.3",
        "install": "^0.13.0",
        "jest": "^29.7.0",
        "npm-check-updates": "^16.14.14",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.2",
        "ts-node-dev": "^2.0.0"
    }
}
